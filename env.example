# Analytics Configuration
# Copy this file to .env.local and update with your actual values

# Google Analytics 4 Measurement ID
# Get this from your GA4 property settings
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Analytics Debug Mode
# Set to true to enable console logging and test panels
NEXT_PUBLIC_ANALYTICS_DEBUG=true

# Analytics Test Mode
# Set to true to prevent actual form submissions and CTA actions
NEXT_PUBLIC_ANALYTICS_TEST_MODE=true

# Optional: Custom Analytics Configuration
# You can add additional analytics providers here
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
# NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id 